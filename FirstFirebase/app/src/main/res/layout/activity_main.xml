<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aek.firstfirebase.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:text="İlk Uyarı Mesafesi:"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="37dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detectText"
        android:layout_marginStart="37dp" />

    <EditText
        android:id="@+id/distanceEditText"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="81dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="100"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@+id/distanceText"
        android:layout_marginStart="3dp" />

    <Button
        android:id="@+id/buzzerBtn"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:layout_marginTop="316dp"
        android:text="Buzzer Kapat"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/distanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anlık Mesafe: "
        android:layout_marginTop="40dp"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toRightOf="@+id/detectText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="102dp" />

    <TextView
        android:id="@+id/detectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Algılandı"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="66dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="66dp" />

    <Button
        android:id="@+id/kaydetBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="30dp"
        android:text="Kaydet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distanceEditText" />

    <Button
        android:id="@+id/relayBtn"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="Röle Kapat"
        app:layout_constraintTop_toBottomOf="@+id/buzzerBtn"
        tools:layout_editor_absoluteX="8dp" />

</android.support.constraint.ConstraintLayout>
